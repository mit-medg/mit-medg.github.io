@article{Ong2017fb,
	author = {Ong, Mei-Sing and Mullen, Mary P and Austin, Eric D and Szolovits, Peter and Natter, Marc and Geva, Alon and Cai, Tianxi and Kong, Sek Won and Mandl, Kenneth D},
	date-added = {2018-11-19 17:11:02 -0500},
	date-modified = {2018-11-19 17:11:02 -0500},
	doi = {10.1161/CIRCRESAHA.117.310804},
	journal = {Circ Res},
	journal-full = {Circulation research},
	keywords = {clustering; comorbidity; network science; pediatrics; pulmonary hypertension},
	month = {Jun},
	pmid = {28611076},
