@article{Neamatullah2008fj,
	author = {Neamatullah, Ishna and Douglass, Margaret M and Lehman, Li-wei H and Reisner, Andrew and Villarroel, Mauricio and Long, William J and Szolovits, Peter and Moody, George B and Mark, Roger G and Clifford, Gari D},
	date-added = {2018-11-19 17:08:58 -0500},
	date-modified = {2018-11-19 17:08:58 -0500},
	journal = {BMC Med Inform Decis Mak},
