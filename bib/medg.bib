	date-added = {2018-11-19 17:08:58 -0500},
	date-modified = {2018-11-19 17:08:58 -0500},
	journal = {Aliment Pharmacol Ther},
	journal-full = {Alimentary pharmacology \& therapeutics},
	mesh = {Adult; Aged; Clostridium Infections; Clostridium difficile; Cohort Studies; Female; Follow-Up Studies; Humans; Inflammatory Bowel Diseases; Logistic Models; Male; Middle Aged; Multivariate Analysis; Risk; Vitamin D},
	month = {May},
