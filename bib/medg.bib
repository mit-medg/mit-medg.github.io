@article{Ananthakrishnan2014bf,
	author = {Ananthakrishnan, Ashwin N and Cheng, Su-Chun and Cai, Tianxi and Cagan, Andrew and Gainer, Vivian S and Szolovits, Peter and Shaw, Stanley Y and Churchill, Susanne and Karlson, Elizabeth W and Murphy, Shawn N and Kohane, Isaac and Liao, Katherine P},
