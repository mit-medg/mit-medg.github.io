	doi = {10.1016/j.artmed.2007.10.001},
	journal = {Artif Intell Med},
	journal-full = {Artificial intelligence in medicine},
	mesh = {Biomedical Research; Confidentiality; Humans; Medical Records Systems, Computerized; Natural Language Processing; Patient Discharge; Pattern Recognition, Automated; Semantics},
	month = {Jan},
